{% assign primary_color = "#6ef195" %}
{% assign secondary_color = "#00e3fd" %}
{% assign animation_duration = "5s" %}
{% assign from_deg_start = "3deg" %}
{% assign from_deg_end = "360deg" %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Background AST</title>
    <meta name="google" content="notranslate" />
    <link rel="shortcut icon" href="assets/favicon.webp" type="image/x-icon" />
    <style>
      *,
      *::after,
      *::before {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: Verdana, Geneva, Tahoma, sans-serif, system-ui, -apple-system,
          BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell,
          'Open Sans', 'Helvetica Neue';
      }

      :root {
        --primary-color: {{ primary_color }};
        --secondary-color: {{ secondary_color }};
      }

      body {
        height: 100vh;
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        place-content: center;
        overflow: hidden;
        background-image: repeating-conic-gradient(
            from var(--deg) at 50% 0%,
            var(--primary-color) 0 1deg,
            transparent 2deg var(--deg)
          ),
          repeating-conic-gradient(
            from var(--deg) at 50% 100%,
            var(--secondary-color) 0 1deg,
            transparent 2deg var(--deg)
          );
        animation: rotar {{ animation_duration }} linear infinite alternate both;
      }

      @keyframes rotar {
        0% {
          --deg: {{ from_deg_start }};
        }
        100% {
          --deg: {{ from_deg_end }};
        }
      }

      @property --deg {
        syntax: '<angle>';
        inherits: true;
        initial-value: 0deg;
      }
    </style>
  </head>
  <body></body>
</html>
